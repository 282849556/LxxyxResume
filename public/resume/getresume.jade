doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title= title
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    link(rel='stylesheet', type='text/css', href='./dist/css/normalize.css')
    link(rel='stylesheet', type='text/css', href='./dist/css/resume.css')
    link(rel='stylesheet', href='./dist/iconfont/iconfont.css')
  body
    aside
      ul
        each val in aside
          li
            a(href=val.href)= val.content
    .container
      header
        figure.qrcode
          img(src='./dist/img/wechat.svg')
        section.title
          h1= header.title.name
          h2= header.title.job
        address
          ul.contacts
            li.icon-mail
              a(href="mailto:"+header.contacts.mail)= header.contacts.mail
            li.icon-wechat= header.contacts.wechat
            li.icon-weibo
              a(href=header.contacts.weibo.href)= header.contacts.weibo.name
            li.icon-github
              a(href=header.contacts.github.href)= header.contacts.github.name
            li.icon-blog
              a(href=header.contacts.blog.href)= header.contacts.blog.name
      article.content
        article.column-6
          section.education
            .sec-title-wrapper.icon-book
              h3.sec-title
                span.sec-zh
                  | 教育经历
                span.sec-en
                  | Education
            .timeline-wrapper
              ul.sec-content.timeline
                li.timeline-item.icon-flags
                  h3.timeline-title
                    time.education-time= education.time
                  dl.education-content
                    dt.education-name= education.name
                    dd.education-major.icon-hat= education.major
                    each val in education.honor
                      dd.education-honor.icon-trophy= val
          section.language
            .sec-title-wrapper.icon-chat
              h3.sec-title
                span.sec-zh
                  | 语言水平
                span.sec-en
                  | Language
            .sec-content
              dl.language-certificates
                each val in language.cert
                  .language-cert-wrapper
                    dt.language-cert-type= val.name
                    dd.progress
                      .progress-bar(style= 'width:'+val.grade/val.fullmarks*100+'%')
                        span.progress-label= val.grade
              ul.language-skills
                each val in language.skills
                  li.icon-star= val
          section.experience
            .sec-title-wrapper.icon-rocket
              h3.sec-title
                span.sec-zh
                  | 项目与工作经验
                span.sec-en
                  | Experience
            .timeline-wrapper
              ul.sec-content.timeline
                each val in experience
                  li.timeline-item.icon-bag
                    h3.timeline-title
                      span.experience-place= val.title.place
                      time.experience-time= val.title.time
                    dl.experience-content
                      dt.experience-position= val.content.position
                      each task in val.content.tasks
                        dd.experience-task.icon-gear!= task
        article.column-6.column
          section.skills
            .sec-title-wrapper.icon-wrench
              h3.sec-title
                span.sec-zh
                  | 技能
                span.sec-en
                  | Skills
            .timeline-wrapper
              ul.sec-content.timeline
                li.timeline-item.icon-flags
                  h3.timeline-title
                    span.skill= skills.flags.name
                  each skill in skills.flags.skill
                    dl.skill-content
                      dt.skill-name!= skill.name
                      each description in skill.description
                        dd.skill-description.icon-star!= description
                li.timeline-item.icon-cloud
                  h3.timeline-title
                    span.skill= skills.cloud.name
                  each skill in skills.cloud.skill
                    dl.skill-content
                      dt.skill-name!= skill.name
                      each description in skill.description
                        dd.skill-description.icon-star!= description
                li.timeline-item.icon-gears
                  h3.timeline-title
                    span.skill= skills.gears.name
                  each skill in skills.gears.skill
                    dl.skill-content
                      dt.skill-name!= skill.name
                      each description in skill.description
                        dd.skill-description.icon-star!= description
    footer
      p
